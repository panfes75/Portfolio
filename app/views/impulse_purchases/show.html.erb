<div class="print-area">
  <div class="result">

      <% @impulse_purchase.each do |impulse_purchase| %>
        <% if impulse_purchase.nil? %>
      <h2>ありません</h2> 
    <% elsif impulse_purchase.operation_plan.nil? %>
      <%= render "buy", impulse_purchase: impulse_purchase %>
    <% else %>
      <%= render "card", impulse_purchase: impulse_purchase %>
    <% end %>
  <% end %>

  </div>
</div>  
<h3 class="center">
  <button class="print-button">
    <span>印刷／保存</span>
  </button>
</h3>

